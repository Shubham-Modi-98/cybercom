@model List<StoringImage_CRUD_Udemy.Models.DataBaseModel.tblProd_Img>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<br />
@Html.ActionLink("Create","Create")
<hr/>
<table style="margin-left:auto;margin-right:auto;" width="90%">
    <thead>
        <th>
            @Html.DisplayName("Product Id")
        </th>
        <th>
            @Html.DisplayName("Product Name")
        </th>
        <th>
            @Html.DisplayName("Quantity ")
        </th>
        <th>
            @Html.DisplayName("Price")
        </th>
        <th>
            @Html.DisplayName("Image")
        </th>
        <th>
            @Html.DisplayName("Purchase Date")
        </th>
        <th>
            @Html.DisplayName("Actions")
        </th>
    </thead>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;">
            <td>
                @item.ProdId
            </td>
            <td>
                @item.ProdName
            </td>
            <td>
                @item.ProdQty.ToString()
            </td>
            <td>
                @item.ProdPrice.ToString("C")
            </td>
            <td>
                <img src="data:image;base64,@item.Image" alt="Product Image" width="100" height="100" />
            </td>
            <td>
                @if (item.Date.HasValue)
                {
                    @item.Date.Value.ToShortDateString()
                }
                else
                {
                    @Html.DisplayName("No Date Found")
                }
            </td>
            <td>
                @Html.ActionLink("Edit","Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>