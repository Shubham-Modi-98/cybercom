@using PassDatafromViewtoController.Models
@model IEnumerable<PassDatafromViewtoController.Models.Student>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Display</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Index")
    </p>
    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.FirstName)*@
                @Html.DisplayName("First Name")
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.LastName)*@
                @Html.DisplayName("Last Name")
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Email)*@
                @Html.DisplayName("Email")
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Mobile)*@
                @Html.DisplayName("Mobile Number")
            </th>
            <th>
                @Html.DisplayName("Actions")
            </th>
        </tr>

        @foreach (var item in Model as List<Student>)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Get", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
